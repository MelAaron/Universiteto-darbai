@model AutoNuoma.ViewModels.MokiniuFinansai

@{
    ViewBag.Title = "MokiniuFinansai";
}

<h2>MokiniuFinansai</h2>

<p><b>Parengta:</b> @DateTime.Now</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Sutartys nuo: </label>
        @*<input class="form-inline date-picker" type="datetime" name="nuo" value="@Model.nuo" />*@
        @Html.EditorFor(model => model.nuo, new { @class = "date-picker" })
        <label>Sutartys iki: </label>
        @*<input class="form-inline date-picker" type="datetime" name="iki" value="@Model.iki" />*@
        @Html.EditorFor(model => model.iki, new { @class = "date-picker" })
    </div>
    <div class="form-group">
        <label>Kainos nuo: </label>
        @*<input class="form-inline date-picker" type="datetime" name="nuo" value="@Model.nuo" />*@
        @Html.EditorFor(model => model.kainaNuo, new { @class = "form-control" })
        <label>Kainos iki: </label>
        @*<input class="form-inline date-picker" type="datetime" name="iki" value="@Model.iki" />*@
        @Html.EditorFor(model => model.kainaIki, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Sumokejo nuo: </label>
        @*<input class="form-inline date-picker" type="datetime" name="nuo" value="@Model.nuo" />*@
        @Html.EditorFor(model => model.sumokejoNuo, new { @class = "form-control" })
        <label>Sumokejo iki: </label>
        @*<input class="form-inline date-picker" type="datetime" name="iki" value="@Model.iki" />*@
        @Html.EditorFor(model => model.sumokejoIki, new { @class = "form-control" })
    </div>
    <div><input class="btn btn-default" type="submit" value="Atrinkti"></div>
}

<table class="table table-striped">
    <tr style="background-color:lightblue">
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].sutarties_nr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].sutarties_data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].mokinio_vardas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].pilna_kaina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].sumokejo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].Skola)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mokiniai[0].kursu_kiekis)
        </th>
    </tr>

    @if (Model.mokiniai.Count == 0)
    {
        <tr>
            <td colspan="4" align="center"><b style="color:red;">Nurodytame laikotarpyje nebuvo mokinių</b></td>
        </tr>
    }

    @foreach (var item in Model.mokiniai)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sutarties_nr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sutarties_data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mokinio_vardas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pilna_kaina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sumokejo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skola)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kursu_kiekis)
            </td>
        </tr>
    }
    <tr style="background-color: lightblue">
        <td height="10px;" colspan="7" align="center"><b>Suma</b></td>
    </tr>

    <tr>
        <td colspan="3"></td>
        <td>
            @Html.DisplayFor(modelItem => Model.visoSuma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.visoSumoketa)
        </td>
        <td colspan="1"></td>
        <td>
            @Html.DisplayFor(modelItem => Model.lankomuKursuK)
        </td>
    </tr>

</table>